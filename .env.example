# ============================================
# PBS Telegram Bot Configuration
# ============================================

# ==================== Telegram ====================
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin user IDs (comma-separated)
# Get your ID from @userinfobot
TELEGRAM_ADMIN_IDS=123456789,987654321

# ==================== Google Sheets ====================
# Products spreadsheet URL (CSV export)
SHEET_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/export?format=csv&gid=0

# Promos spreadsheet URL (optional)
SHEET_URL_PROMO=

# Payment/orders spreadsheet URL (optional)
SHEET_URL_PAYMENT=

# Product cache TTL in milliseconds (default: 120000 = 2 minutes)
PRODUCT_TTL_MS=120000

# ==================== Google Apps Script ====================
# Apps Script webhook URL for stock management
GAS_WEBHOOK_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# Secret key for Apps Script authentication
GAS_SECRET=your-super-secret-key-here

# ==================== Midtrans Payment ====================
# Midtrans server key
MIDTRANS_SERVER_KEY=your_midtrans_server_key

# Production mode (true/false)
MIDTRANS_IS_PRODUCTION=false

# Payment expiry time in milliseconds (default: 900000 = 15 minutes)
PAYMENT_TTL_MS=900000

# ==================== Server Configuration ====================
# HTTP server port
HTTP_PORT=3000

# Public base URL for webhooks (include https://)
PUBLIC_BASE_URL=https://your-domain.com

# Webhook secret for product refresh and alerts
WEBHOOK_SECRET=supersecret-bot

# ==================== Features ====================
# Enable promo codes
ENABLE_PROMO=true

# Enable referral system
ENABLE_REFERRAL=true

# Enable analytics
ENABLE_ANALYTICS=true

# Enable favorites
ENABLE_FAVORITES=true

# ==================== UI Configuration ====================
# Items per page in catalog
ITEMS_PER_PAGE=10

# Number grid columns
GRID_COLS=5

# User cooldown in milliseconds
USER_COOLDOWN_MS=1000

# Minimum search query length
SEARCH_MIN_LENGTH=2

# ==================== Store Information ====================
# Store name
STORE_NAME=PBS Digital Store

# Store description
STORE_DESCRIPTION=Toko Digital Terpercaya #1

# Support contact (phone/telegram username)
SUPPORT_CONTACT=@yoursupport

# ==================== Localization ====================
# Currency code
CURRENCY=IDR

# Locale for formatting
LOCALE=id-ID
